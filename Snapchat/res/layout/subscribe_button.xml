<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center" android:id="@id/subscribe_button_border_and_fill" android:background="@drawable/subscribe_button_border_shape" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <FrameLayout android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <FrameLayout android:layout_gravity="center_vertical" android:id="@id/subscribe_button_icon_holder" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center_vertical" android:id="@id/subscribe_button_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <com.snapchat.android.framework.ui.views.LoadingSpinnerView android:id="@id/subscribe_button_loading" android:visibility="gone" android:layout_width="@dimen/subscribe_button_icon_width" android:layout_height="@dimen/subscribe_button_icon_height" />
        </FrameLayout>
        <TextView android:textSize="@dimen/text_size_default" android:id="@id/subscribe_button_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/subscribe_button_text_box_margin_left" />
    </FrameLayout>
</FrameLayout>