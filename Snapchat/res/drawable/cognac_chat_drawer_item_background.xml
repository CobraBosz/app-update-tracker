<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/off_white" />
            <corners android:radius="@dimen/default_gap" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#00fafafa" android:endColor="#ffdfe3e7" android:angle="180.0" android:centerX="0.96" android:centerColor="#00fafafa" />
            <corners android:radius="@dimen/default_gap" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#00fafafa" android:endColor="#ffdfe3e7" android:angle="360.0" android:centerX="0.96" android:centerColor="#00fafafa" />
            <corners android:radius="@dimen/default_gap" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffdfe3e7" android:endColor="#00fafafa" android:angle="-90.0" android:type="linear" android:centerY="0.04" android:centerColor="#00fafafa" />
            <corners android:radius="@dimen/default_gap" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffdfe3e7" android:endColor="#00fafafa" android:angle="90.0" android:type="linear" android:centerY="0.04" android:centerColor="#00fafafa" />
            <corners android:radius="@dimen/default_gap" />
        </shape>
    </item>
</layer-list>