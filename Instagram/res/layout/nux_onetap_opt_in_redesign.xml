<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:focusable="true" android:focusableInTouchMode="true" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/notification_bar" />
        <TextView android:textSize="@dimen/font_xxlarge" android:textColor="@color/grey_9" android:gravity="center" android:id="@id/field_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/reg_nux_edit_margin" android:layout_marginTop="@dimen/title_top_margin" android:layout_marginRight="@dimen/reg_nux_edit_margin" android:fontFamily="Roboto-Regular" android:layout_marginStart="@dimen/reg_nux_edit_margin" android:layout_marginEnd="@dimen/reg_nux_edit_margin" />
        <TextView android:textSize="@dimen/font_medium_large" android:textColor="@color/grey_5" android:gravity="center" android:id="@id/field_detail" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/reg_nux_edit_margin" android:layout_marginTop="@dimen/detail_top_margin" android:layout_marginRight="@dimen/reg_nux_edit_margin" android:fontFamily="Roboto-Regular" android:paddingStart="@dimen/reg_nux_edit_margin" android:paddingEnd="@dimen/reg_nux_edit_margin" android:layout_marginStart="@dimen/reg_nux_edit_margin" android:layout_marginEnd="@dimen/reg_nux_edit_margin" />
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/phone_container_top_margin">
            <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/phone_image_left_margin" android:layout_marginRight="@dimen/phone_image_right_margin" android:src="@drawable/nux_one_tap_phone" android:layout_marginStart="@dimen/phone_image_left_margin" android:layout_marginEnd="@dimen/phone_image_right_margin" />
            <ImageView android:layout_gravity="center_horizontal" android:id="@id/ig_logo" android:layout_width="wrap_content" android:layout_height="@dimen/ig_logo_height" android:layout_marginLeft="@dimen/reg_nux_edit_margin" android:layout_marginTop="@dimen/ig_logo_top_margin" android:layout_marginBottom="@dimen/reg_nux_edit_margin" android:src="?nuxLogoDrawable" android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/reg_nux_edit_margin" />
            <com.instagram.common.ui.widget.imageview.CircularImageView android:layout_gravity="center_horizontal" android:id="@id/profile_image_view" android:layout_width="@dimen/profile_image_dimension" android:layout_height="@dimen/profile_image_dimension" android:layout_marginLeft="@dimen/reg_nux_edit_margin" android:layout_marginTop="@dimen/reg_nux_edit_margin" android:layout_marginBottom="@dimen/reg_nux_half_edit_margin" android:layout_below="@id/ig_logo" android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/reg_nux_edit_margin" app:strokeColor="@color/avatar_stroke" app:strokeWidth="@dimen/circular_avatar_stroke_width" />
            <TextView android:textSize="@dimen/font_small" android:textStyle="bold" android:gravity="center" android:id="@id/username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/reg_nux_edit_margin" android:layout_marginTop="@dimen/reg_nux_half_edit_margin" android:layout_marginBottom="@dimen/username_vertical_margin" android:layout_below="@id/profile_image_view" android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/reg_nux_edit_margin" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <View style="@style/Widget.Instagram.Divider"
          xmlns:android="http://schemas.android.com/apk/res/android" />
        <com.instagram.ui.widget.progressbutton.ProgressButton android:id="@id/progress_button_text" android:layout_margin="@dimen/reg_nux_edit_margin" style="@style/RegProgressButtonStyle" />
        <include android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/reg_nux_edit_margin" layout="@layout/reg_skip" />
    </LinearLayout>
</FrameLayout>