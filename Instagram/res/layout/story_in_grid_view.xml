<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.instagram.common.ui.widget.imageview.IgImageView android:id="@id/reel_preview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
    <View android:layout_gravity="bottom" android:id="@id/background_gradient" android:background="@drawable/reel_background_content_gradient" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <LinearLayout android:orientation="vertical" android:paddingBottom="@dimen/story_bottom_padding" android:clipChildren="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <FrameLayout android:layout_gravity="bottom|center" android:id="@id/reel" android:clipChildren="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/story_inner_padding">
            <com.instagram.common.ui.widget.imageview.CircularImageView android:layout_gravity="center" android:id="@id/avatar" style="@style/AvatarReel.OnColoredBackground.Large" />
            <com.instagram.ui.widget.gradientspinner.GradientSpinner android:layout_gravity="center" android:id="@id/reel_ring" android:visibility="gone" style="@style/AvatarReelRing.Large" />
            <com.instagram.reels.ui.badge.ReelBrandingBadgeView android:layout_gravity="end|bottom|center" android:id="@id/branding_badge" android:layout_width="@dimen/reel_actionbar_title_badge_size" android:layout_height="@dimen/reel_actionbar_title_badge_size" android:layout_marginRight="@dimen/reel_actionbar_title_badge_size_margin_right" />
        </FrameLayout>
        <TextView android:textSize="@dimen/font_medium" android:textColor="@color/white" android:ellipsize="end" android:layout_gravity="bottom|center" android:id="@id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</RelativeLayout>