<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.instagram.arlink.ui.CoachMarkOverlay android:id="@id/coach_mark_overlay" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/tutorial_text_arrow_container" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/tutorial_text_horiz_padding" android:paddingEnd="@dimen/tutorial_text_horiz_padding">
        <ImageView android:id="@id/tutorial_arrow_up" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/tutorial_arrow_vertical_margin" android:src="@drawable/arrow_up" />
        <TextView android:textSize="@dimen/font_small" android:textColor="@color/grey_3" android:gravity="center_horizontal" android:id="@id/tutorial_step_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/tutorial_step_text_margin_bottom" />
        <TextView android:textSize="@dimen/font_medium_xlarge" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@id/tutorial_title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.2" />
        <ImageView android:id="@id/tutorial_arrow_down" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/tutorial_arrow_vertical_margin" android:src="@drawable/arrow_down" />
    </LinearLayout>
</FrameLayout>