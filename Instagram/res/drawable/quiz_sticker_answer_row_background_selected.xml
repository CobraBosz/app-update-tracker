    </item>
    <item android:left="@dimen/quiz_sticker_answer_checkbox_stroke_padding" android:top="@dimen/quiz_sticker_answer_checkbox_stroke_padding" android:right="@dimen/quiz_sticker_answer_checkbox_stroke_padding" android:bottom="@dimen/quiz_sticker_answer_checkbox_stroke_padding">
        <shape android:shape="rectangle">
            <solid android:color="@color/quiz_sticker_background" />
            <corners android:radius="@dimen/quiz_sticker_answer_row_corner_radius" />
        </shape>
    </item>
</layer-list>