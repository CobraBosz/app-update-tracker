<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:topLeftRadius="@dimen/direct_action_log_corner_radius" android:topRightRadius="@dimen/direct_action_log_corner_radius" />
        </shape>
    </item>
    <item android:id="@id/drag_handle" android:top="@dimen/direct_action_log_drag_handle_top_spacing">
        <bitmap android:gravity="center|top" android:src="@drawable/bottom_sheet_drag_handle" />
    </item>
</layer-list>