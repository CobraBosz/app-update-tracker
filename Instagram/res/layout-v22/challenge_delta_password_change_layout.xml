<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@id/delta_password_change_scroll_view" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/delta_password_change_button_container">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_to_border_margin" android:layout_marginRight="@dimen/content_to_border_margin">
            <TextView android:textSize="@dimen/font_xlarge_xxlarge" android:textColor="@color/grey_9" android:gravity="center_horizontal" android:id="@id/delta_password_change_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/delta_margin_large" android:layout_marginBottom="@dimen/delta_margin_small" android:text="@string/delta_password_change_title" android:fontFamily="sans-serif-light" />
            <TextView android:textSize="@dimen/font_medium" android:textColor="@color/grey_9" android:gravity="center_horizontal" android:id="@id/delta_password_change_subtitle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/delta_margin_medium" android:text="@string/delta_password_change_subtitle" android:fontFamily="sans-serif-light" />
            <EditText android:textSize="@dimen/font_medium" android:id="@id/delta_password_change_new_password" android:hint="@string/delta_password_change_new_password_hint" android:inputType="textPassword" style="@style/DeltaPasswordChangePasswordField" />
            <EditText android:textSize="@dimen/font_medium" android:id="@id/delta_password_change_confirm_new_password" android:layout_marginBottom="@dimen/delta_margin_smallest" android:hint="@string/delta_password_change_confirm_new_password_hint" android:inputType="textPassword" style="@style/DeltaPasswordChangePasswordField" />
