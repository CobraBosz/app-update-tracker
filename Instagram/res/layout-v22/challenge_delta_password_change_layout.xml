            <TextView android:gravity="center" android:id="@id/delta_password_change_footer" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/delta_margin_smallest" android:text="@string/delta_password_change_footer" style="@style/FootNoteDetail" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@id/delta_password_change_button_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:id="@id/delta_password_change_divider" style="@style/Widget.Instagram.Divider" />
        <com.instagram.ui.widget.progressbutton.ProgressButton android:textSize="@dimen/font_medium" android:textStyle="bold" android:gravity="center" android:id="@id/delta_password_change_submit_button" android:background="?nuxActionButtonBackground" android:layout_width="fill_parent" android:layout_height="@dimen/challenge_button_height" android:layout_marginLeft="@dimen/challenge_button_horizontal_margin" android:layout_marginTop="@dimen/challenge_button_vertical_margin" android:layout_marginRight="@dimen/challenge_button_horizontal_margin" android:layout_marginBottom="@dimen/challenge_button_vertical_margin" android:text="@string/delta_password_change_submit" android:fontFamily="sans-serif" android:layout_marginHorizontal="@dimen/challenge_button_horizontal_margin" android:layout_marginVertical="@dimen/challenge_button_vertical_margin" />
    </LinearLayout>
</RelativeLayout>